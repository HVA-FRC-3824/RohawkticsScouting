<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="50dp"
    android:background="#ffffff"
    android:id="@+id/pick_item"
    android:padding="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:text="New Text"
        android:textSize="16sp"
        android:id="@+id/topText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@+id/topText"
        android:layout_alignLeft="@+id/topText"
        android:id="@+id/bottomText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picked"
        android:layout_alignParentRight="true"
        android:id="@+id/team_picked"
        android:background="#ff0000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Team"
        android:layout_toLeftOf="@id/team_picked"
        android:id="@+id/pick_view_team" />

    <View
        android:id="@+id/red_card"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#ff0000"
        android:layout_toLeftOf="@id/pick_view_team"
        android:visibility="gone"/>

    <View
        android:id="@+id/yellow_card"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="#ffea00"
        android:layout_toLeftOf="@id/red_card"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>

</RelativeLayout>