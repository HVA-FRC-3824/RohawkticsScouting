<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".StartScreen"
    android:background="@color/columbia_blue">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/activity_start_screen" tools:context=".StartScreen"
            android:orientation="vertical">

            <TextView android:text="RoHawktics \nScouting App" android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:id="@+id/textView"
                android:textSize="@dimen/abc_text_size_display_3_material"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                android:textColor="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Match Schedule"
                android:textColor="@color/white"
                android:id="@+id/matchSchedule_button"
                android:visibility="gone"
                android:onClick="match_schedule"
                android:background="@color/navy_blue" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Drive Team Feedback"
                android:textColor="@color/white"
                android:id="@+id/feedback_button"
                android:visibility="gone"
                android:onClick="feedback"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Scout Match"
                android:textColor="@color/white"
                android:id="@+id/scoutMatch_button"
                android:visibility="gone"
                android:onClick="scout_match"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Scout Pit"
                android:textColor="@color/white"
                android:id="@+id/scoutPit_button"
                android:visibility="gone"
                android:onClick="scout_pit"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Super Scout"
                android:textColor="@color/white"
                android:id="@+id/superScout_button"
                android:visibility="gone"
                android:onClick="super_scout"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Match Planning"
                android:textColor="@color/white"
                android:id="@+id/matchPlanning_button"
                android:visibility="gone"
                android:onClick="match_planning"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="View Match"
                android:textColor="@color/white"
                android:id="@+id/viewMatch_button"
                android:visibility="gone"
                android:onClick="view_match"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="View Team"
                android:textColor="@color/white"
                android:id="@+id/viewTeam_button"
                android:visibility="gone"
                android:onClick="view_team"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="View Event"
                android:textColor="@color/white"
                android:id="@+id/viewEvent_button"
                android:visibility="gone"
                android:onClick="view_event"
                android:background="@color/navy_blue" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="View Picklist"
                android:textColor="@color/white"
                android:id="@+id/viewPicklist_button"
                android:visibility="gone"
                android:onClick="view_picklist"
                android:background="@color/navy_blue"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Settings"
                android:id="@+id/settings_button"
                android:onClick="settings"
                android:background="@color/navy_blue"
                android:textColor="@color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sync"
                android:id="@+id/sync_button"
                android:onClick="sync"
                android:visibility="gone"
                android:background="@color/navy_blue"
                android:textColor="@color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Aggregate"
                android:id="@+id/aggregate_button"
                android:onClick="aggregate"
                android:visibility="gone"
                android:background="@color/navy_blue"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
