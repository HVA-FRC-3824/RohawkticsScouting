<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/columbia_blue"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.team3824.akmessing1.scoutingapp.views.CustomHeader
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_view_header"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_view_spinner"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_view_spinner_sub"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* times crossed (times seen) : time taken"
        android:id="@+id/key1"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* times crossed (times seen) : average"
        android:id="@+id/key2"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="** shots made (shots attempted) : percentage"
        android:id="@+id/key3"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/event_view_list"
        xmlns:android="http://schemas.android.com/apk/res/android" />

</LinearLayout>