<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <com.team3824.akmessing1.scoutingapp.views.CustomCounter
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/foul_standard"
            app:label="Foul:"
            app:key="foul_standard"/>

        <com.team3824.akmessing1.scoutingapp.views.CustomCounter
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/foul_tech"
            app:label="Tech Foul:"
            app:key="foul_tech"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.team3824.akmessing1.scoutingapp.views.CustomCheckbox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/foul_yellow_card"
                app:label="Yellow card:"
                app:key="foul_yellow_card"/>

            <com.team3824.akmessing1.scoutingapp.views.CustomCheckbox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/foul_red_card"
                app:label="Red Card:"
                app:key="foul_red_card"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>