<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/columbia_blue">
    <com.team3824.akmessing1.scoutingapp.views.CustomHeader
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/match_view_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_match"
            android:text="Previous Match"
            android:background="#909090"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Number:"
            android:id="@+id/match_num"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_match"
            android:text="Next Match"
            android:background="#909090"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0022ff">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="#0022ff">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Number:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Matches:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avg. Points:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Three tote autos:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto step cans:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coop totes placed:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/blue1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/blue2"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/blue3"/>
    </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ff0000">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="#ff0000"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team Number:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Matches:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avg. Points:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Three tote autos:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto step cans:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coop totes placed:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            class="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/red1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/red2"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            class="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/red3"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>