<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/columbia_blue">
    <com.team3824.akmessing1.scoutingapp.views.CustomHeader
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/match_view_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_match"
            android:text="Previous Match"
            android:background="#909090"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Number:"
            android:id="@+id/match_num"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_match"
            android:text="Next Match"
            android:background="#909090"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/blue1"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/blue2"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/blue3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            class="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/red1"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:name="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/red2"/>
        <fragment
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            class="com.team3824.akmessing1.scoutingapp.fragments.TeamViewFragment"
            android:id="@+id/red3"/>
    </LinearLayout>
</LinearLayout>