<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <com.team3824.akmessing1.scoutingapp.views.CustomSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auto_start_position"
            app:label="Starting Position:"
            app:key="auto_start_position"
            app:spinner_values="@array/auto_start_position_dropdown"/>

        <com.team3824.akmessing1.scoutingapp.views.CustomRadioButtons
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/auto_reach_cross"
            app:label="Defenses"
            app:key="auto_reach_cross"
            app:radio_values="@array/auto_reach_cross_radio"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High Goal"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auto_shoot_high_scored"
                app:label="Hit:"
                app:key="auto_shoot_high_scored"/>

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auto_shoot_high_missed"
                app:label="Missed:"
                app:key="auto_shoot_high_missed"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low Goal"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auto_shoot_low_scored"
                app:label="Hit:"
                app:key="auto_shoot_low_scored"/>

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/auto_shoot_low_missed"
                app:label="Missed:"
                app:key="auto_shoot_low_missed"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>