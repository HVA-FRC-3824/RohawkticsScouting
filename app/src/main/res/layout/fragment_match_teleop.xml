<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <com.team3824.akmessing1.scoutingapp.views.stronghold_specific.CustomDefenseInput
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_defense_1"
            app:label="Defense 1 (Low bar):"
            app:key="teleop_defense_1"/>

        <com.team3824.akmessing1.scoutingapp.views.stronghold_specific.CustomDefenseInput
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_defense_2"
            app:label="Defense 2:"
            app:key="teleop_defense_2"/>


        <com.team3824.akmessing1.scoutingapp.views.stronghold_specific.CustomDefenseInput
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/teleop_defense_3"
            app:label="Defense 3:"
            app:key="teleop_defense_3"/>

        <com.team3824.akmessing1.scoutingapp.views.stronghold_specific.CustomDefenseInput
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/teleop_defense_4"
            app:label="Defense 4:"
            app:key="teleop_defense_4"/>

        <com.team3824.akmessing1.scoutingapp.views.stronghold_specific.CustomDefenseInput
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/teleop_defense_5"
            app:label="Defense 5:"
            app:key="teleop_defense_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High Goal"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000" />

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/teleop_high_hit"
                app:label="Hit:"
                app:key="teleop_high_hit"/>

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/teleop_high_miss"
                app:label="Missed:"
                app:key="teleop_high_miss"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low Goal"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:textColor="#000000" />

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/teleop_low_hit"
                app:label="Hit:"
                app:key="teleop_low_hit"/>

            <com.team3824.akmessing1.scoutingapp.views.CustomCounter
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/teleop_low_miss"
                app:label="Missed:"
                app:key="teleop_low_miss"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>