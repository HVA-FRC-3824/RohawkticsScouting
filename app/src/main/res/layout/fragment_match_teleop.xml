<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <com.team3824.akmessing1.scoutingapp.views.CustomStacks
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_stacks"
            app:key="teleop_stacks"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
        <com.team3824.akmessing1.scoutingapp.views.CustomCounter
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_knockedOverStacks"
            app:label="Knocked over stacks"
            app:key="teleop_knockedOverStacks"/>

        <com.team3824.akmessing1.scoutingapp.views.CustomCounter
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_coopTotes"
            app:label="Coop Totes"
            app:key="teleop_coopTotes"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
        <com.team3824.akmessing1.scoutingapp.views.CustomCounter
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_preexistingCoopTotes"
            app:label="Pre-existing Coop Totes"
            app:key="teleop_preexistingCoopTotes"/>

        <com.team3824.akmessing1.scoutingapp.views.CustomCounter
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_stepCans"
            app:label="Cans taken from the step"
            app:key="teleop_stepCans"/>

                </LinearLayout>
            </LinearLayout>
        <com.team3824.akmessing1.scoutingapp.views.CustomRadioButtons
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teleop_landfillFeederNeither"
            app:label="Play style"
            app:key="teleop_landfillFeederNeither"
            app:radio_values="@array/play_style"/>

    </LinearLayout>
</ScrollView>