<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team3824.akmessing1.scoutingtest" >

    <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="23" android:maxSdkVersion="23" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.team3824.akmessing1.scoutingtest.activities.StartScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.MatchList"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.Settings" >
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.MatchSchedule" >
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.MatchScouting"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.PitScouting"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.PitList"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingtest.activities.PickList"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
