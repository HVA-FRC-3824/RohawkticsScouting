<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team3824.akmessing1.scoutingapp" >

    <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="23" android:maxSdkVersion="23" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.team3824.akmessing1.scoutingapp.activities.StartScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.MatchList"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.Settings"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.MatchSchedule"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.ScheduleBuilder"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.MatchScouting"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.PitScouting"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.PitList"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.PickList"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.TeamList"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.TeamView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.MatchView"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.SuperScouting"
            android:windowSoftInputMode="stateVisible|adjustPan"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.SyncActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name="com.team3824.akmessing1.scoutingapp.activities.EventView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <service android:name=".services.Aggregate"/>
    </application>

</manifest>
